@model GomelRectorCouncil.Models.Achievement

@{
    ViewData["Title"] = "СРГО";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование</h2>
<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Результат</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="AchievementId" />
        <div class="form-group">
            <label asp-for="Indicator.Year" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Year" class="form-control" readonly="readonly"/>               
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Indicator.IndicatorName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="IndicatorId" class="form-control" asp-items="ViewBag.IndicatorId" readonly="readonly"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Univercity.UniversityName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="UnivercityId" class="form-control" asp-items="ViewBag.UnivercityId" readonly="readonly"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IndicatorValue" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IndicatorValue" class="form-control" />
                <span asp-validation-for="IndicatorValue" class="text-danger"></span>
            </div>
        </div>             

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-warning" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-sm btn-primary">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
