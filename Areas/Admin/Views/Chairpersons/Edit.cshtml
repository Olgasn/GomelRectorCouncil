@model GomelRectorCouncil.Models.Chairperson

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Председатель</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ChairpersonId" />
        <div class="form-group">
            <label asp-for="StartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StopDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StopDate" class="form-control" />
                <span asp-validation-for="StopDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Rector.FullName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="RectorId" class="form-control" asp-items="ViewBag.RectorId"></select>
                <span asp-validation-for="RectorId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
