@model GomelRectorCouncil.Models.Document

@{
    ViewData["Title"] = "СРГО";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Document</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="DocumentId" />
        <div class="form-group">
            <label asp-for="DocumentURL" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="file" name="upload" />
            </div>
        </div>


        <div class="form-group">
            <label asp-for="RegistrationNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <a src="@Model.DocumentURL" class="col-md-2">
                    <input asp-for="DocumentName" class="form-control" />
                </a>
                <span asp-validation-for="DocumentName" class="text-danger"></span>
        </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DocumentDescription" class="form-control" />
                <span asp-validation-for="DocumentDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RegistrationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RegistrationDate" class="form-control" />
                <span asp-validation-for="RegistrationDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentURL" class="col-md-2 control-label">Загрузить документ</label>
            <div class="col-md-10">
                <input asp-for="DocumentURL" class="form-control" />
                <span asp-validation-for="DocumentURL" class="text-danger"></span>
            <div class="col-md-10">
                <input type="file" name="upload" />
            </div>



            </div>
        </div>
        <div class="form-group">
            <label asp-for="Chairperson.Rector.FullName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ChairpersonId" class="form-control" asp-items="ViewBag.ChairpersonId"></select>
                <span asp-validation-for="ChairpersonId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
