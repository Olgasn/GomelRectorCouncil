@model IEnumerable<GomelRectorCouncil.Models.Rector>

@{
    ViewData["Title"] = "СРГО";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ректоры</h2>

<p>
    <a asp-action="Create" asp-controller="Rectors">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstMidName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MiddleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.University.UniversityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <img src="@item.Photo" alt="Нет фото" width="30" height="30">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University.UniversityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RectorId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.RectorId">Подробно</a> |
                <a asp-action="Delete" asp-route-id="@item.RectorId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
