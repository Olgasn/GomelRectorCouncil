@model IEnumerable<GomelRectorCouncil.Models.Indicator>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Показатели для подведения итогов в заданном году</h2>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IndicatorId1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IndicatorId2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IndicatorId3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IndicatorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IndicatorUnit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IndicatorType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IndicatorDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IndicatorId1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndicatorId2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndicatorId3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndicatorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndicatorUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndicatorType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndicatorDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IndicatorId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.IndicatorId">Подробно</a> |
                <a asp-action="Delete" asp-route-id="@item.IndicatorId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
