@model IEnumerable<GomelRectorCouncil.Models.ApplicationUser>
@{
    ViewBag.Title = "Список пользователей";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="Create" asp-controller="Home">Добавить пользователя</a>

<table class="table">
    <tr><th>Имя</th><th>Email</th><th>Год</th><th>Университет</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.RegistrationDate</td>
            <td>@user.UserName</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="User" asp-route-id="@user.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>