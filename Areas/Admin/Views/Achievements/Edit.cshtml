@model GomelRectorCouncil.Models.Achievement

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Результат</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AchievementId" />
        <div class="form-group">
            <label asp-for="Indicator.IndicatorName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="IndicatorId" class="form-control" asp-items="ViewBag.IndicatorId" disabled></select>
                <span asp-validation-for="IndicatorId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Univercity.UniversityName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="UnivercityId" class="form-control" asp-items="ViewBag.UnivercityId" disabled></select>
                <span asp-validation-for="UnivercityId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IndicatorValue" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IndicatorValue" class="form-control" />
                <span asp-validation-for="IndicatorValue" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
