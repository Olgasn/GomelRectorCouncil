@model GomelRectorCouncil.Models.Document

@{
    ViewData["Title"] = "Добавить";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Document</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="RegistrationNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DocumentName" class="form-control" />
                <span asp-validation-for="DocumentName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DocumentDescription" class="form-control" />
                <span asp-validation-for="DocumentDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RegistrationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RegistrationDate" class="form-control" />
                <span asp-validation-for="RegistrationDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentURL" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DocumentURL" class="form-control" />
                <span asp-validation-for="DocumentURL" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ChairpersonId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ChairpersonId" class ="form-control" asp-items="ViewBag.ChairpersonId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
