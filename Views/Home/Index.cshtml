@model IEnumerable<GomelRectorCouncil.Models.University>

@{
    ViewData["Title"] = "Совет ректоров Гомельской области";
}

<h2>Университеты</h2>


<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
             @Html.DisplayNameFor(model => model.UniversityName)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Address)    
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Rector.FullName)       
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Website)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Logo" alt="Фотография отсутствует" width="25" height="25">
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UniversityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>                     
                <td>
                    @Html.DisplayFor(modelItem => item.Rector.FullName)
                </td>
                <td>
                    <a href="http:\\@item.Website" target="_blank">@Html.DisplayFor(modelItem => item.Website)</a>
                </td>

            </tr>
        }
    </tbody>
</table>
 