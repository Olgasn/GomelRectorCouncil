@model IEnumerable<GomelRectorCouncil.Models.University>

@{
    ViewData["Title"] = "СРГО";
}

<h2>Университеты</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Логотип
            </th>
            <th>
             @Html.DisplayNameFor(model => model.UniversityName)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Address)    
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Rector.FullName)       
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Website)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Logo" alt="фотография отсутствует" width="35" height="35">
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UniversityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>                     
                <td>
                    @Html.DisplayFor(modelItem => item.Rector.FullName)
                </td>
                <td>
                    <a href="http:\\@item.Website" target="_blank">@Html.DisplayFor(modelItem => item.Website)</a>
                </td>

            </tr>
        }
    </tbody>
</table>
 <div>
     <h5>
      <b>Председатель Совета ректоров Гомельской области:</b> @ViewBag.ChairpersonName  
     </h5>
 </div>