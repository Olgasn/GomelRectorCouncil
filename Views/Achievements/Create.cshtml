@model GomelRectorCouncil.Models.Achievement

@{
    ViewData["Title"] = "Добавить";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Achievement</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IndicatorId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IndicatorId" class ="form-control" asp-items="ViewBag.IndicatorId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UnivercityId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="UnivercityId" class ="form-control" asp-items="ViewBag.UnivercityId"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IndicatorValue" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IndicatorValue" class="form-control" />
                <span asp-validation-for="IndicatorValue" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
